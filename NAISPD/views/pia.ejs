<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plano de Atendimento Individual (PIA)</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/pia.css">
</head>
<body>
    <div id="menu-container"></div>
<script>
document.addEventListener('DOMContentLoaded', function () {
    fetch('base.ejs')
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.text();
        })
        .then(data => {
            document.getElementById('menu-container').innerHTML = data;
            var btnExp = document.querySelector('#btn-exp');
            var menuSide = document.querySelector('.menu-lateral');

            btnExp.addEventListener('click', function () {
                console.log("botão clicado");
                menuSide.classList.toggle('expandir');
            });
        })
        .catch(error => {
            console.error('Fetch error:', error);
        });
});
</script>
    <div class="container">
        <h2>Plano de Atendimento Individual (PIA)</h2>

        <section identificacao="identificacao">
            <h3>1. IDENTIFICAÇÃO</h3>
            
            <form action="/alterar/<%= person.id %>" method="post"> <!-- Make sure to include the person's ID -->
                <br>
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" value="<%= person.nome %>"><br>
                
                <label for="datanascimento">Data de Nascimento:</label>
                <input type="date" id="datanascimento" name="datanascimento" value="<%= person.datanascimento %>"><br>


                <!-- Other fields remain the same -->
                <label for="eixo_deficiencia">Eixo Deficiência:</label>
                <textarea name="eixo_deficiencia" id="eixo_deficiencia"><%= person.eixo_deficiencia %></textarea><br>
                
                <br>
                <label for="eixo_deficiencia">Eixo Deficiência:</label>
                <textarea name="eixo_deficiencia" id="eixo_deficiencia"><%= person.eixo_deficiencia %></textarea><br>
                
                <label for="eixo_familia">Eixo Família:</label>
                <textarea name="eixo_familia" id="eixo_familia"><%= person.eixo_familia %></textarea><br>
                
                <label for="opiniao_atendido">Opinião Atendido:</label>
                <textarea name="opiniao_atendido" id="opiniao_atendido"><%= person.opiniao_atendido %></textarea><br>
                
                <label for="opiniao_familia">Opinião Família:</label>
                <textarea name="opiniao_familia" id="opiniao_familia"><%= person.opiniao_familia %></textarea><br>
                
                <label for="avaliacao_familia">Avaliação Família:</label>
                <textarea name="avaliacao_familia" id="avaliacao_familia"><%= person.avaliacao_familia %></textarea><br>
                
                <label for="resumo_avaliacao">Resumo Avaliação:</label>
                <textarea name="resumo_avaliacao" id="resumo_avaliacao"><%= person.resumo_avaliacao %></textarea><br>
                
                <label for="metas_acoes">Metas e Ações:</label>
                <textarea name="metas_acoes" id="metas_acoes"><%= person.metas_acoes %></textarea><br>
                
                <label for="resultado">Resultado:</label>
                <textarea name="resultado" id="resultado"><%= person.resultado %></textarea><br>

                <button type="submit">Salvar</button> <!-- Submit button -->
            </form>
        </section>
    </div>
</body>
</html>